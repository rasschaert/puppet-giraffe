var graphite_url = "<%= @graphite_url %>";

var dashboards = 
[
  <% @dashboards.each do |dash| -%>
  { "name": "<%= dash['name'] %>",
    <% if dash['refresh'] -%>"refresh": <%= dash['refresh'] %>,<% end -%>
    <% if dash['scheme'] -%>"scheme": "<%= dash['scheme'] %>",<% end -%>
    <% if dash['graphite_url'] -%>"graphite_url": "<%= dash['graphite_url'] %>",<% end -%>
    <% if dash['description'] -%>"description": "<%= dash['description'] %>",<% end -%>
    "metrics": 
    [
      <% dash['metrics'].each do |metric| -%>
      {
        <% if metric['alias'] -%>"alias": "<%= metric['alias'] %>",<% end -%>
        <% if metric['target'] -%>"target": "<%= metric['target'] %>",<% end -%>
        <% if metric['targets'] -%>"targets": [
          <% metric['targets'].each do |targ| %>"<% targ %>",<% end -%>
        ],
        <% end -%>
        <% if metric['description'] -%>"description": "<%= metric['description'] %>",<% end -%>
        <% if metric['summary'] -%>"summary": "<%= metric['summary'] %>",<% end -%>
        <% if metric['summary_formatter'] -%>"summary_formatter": <%= metric['summary_formatter'] %>,<% end -%>
        <% if metric['renderer'] -%>"renderer": "<%= metric['renderer'] %>",<% end -%>
        <% if metric['unstack'] -%>"unstack": <%= metric['unstack'] %>,<% end -%>
        <% if metric['interpolation'] -%>"interpolation": "<%= metric['interpolation'] %>",<% end -%>
        <% if metric['stroke'] -%>"stroke": <%= metric['stroke'] %>,<% end -%>
        <% if metric['min'] -%>"min": "<%= metric['min'] %>",<% end -%>
        <% if metric['height'] -%>"height": "<%= metric['height'] %>",<% end -%>
        <% if metric['hover_formatter'] -%>"hover_formatter": <%= metric['hover_formatter'] %>,<% end -%>
        <% if metric['null_as'] -%>"null_as": <%= metric['null_as'] %>,<% end -%>
      },
      <% end -%>
    ]
  },
  <% end -%>
];

